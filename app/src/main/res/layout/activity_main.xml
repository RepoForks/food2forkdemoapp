<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinator_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/setting_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="@dimen/screen_margin_normal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@color/grey"
            android:dividerHeight="@dimen/screen_margin_xsmall"
            android:overScrollMode="never"
            android:paddingBottom="@dimen/screen_margin_normal"
            android:paddingLeft="@dimen/screen_margin_small"
            android:paddingRight="@dimen/screen_margin_small"
            android:paddingTop="@dimen/screen_margin_normal"
            android:scrollbars="none"
            tools:listitem="@layout/layout_recipes_item"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>